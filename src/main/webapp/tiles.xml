		<put-attribute name="menu"
			value="/WEB-INF/views/common/_menu_admin.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/views/common/_footer_admin.jsp" />
	</definition>

	<definition name="admin_home"
		extends="base.admin.definition">
		<put-attribute name="title" value="Admin Home" />
		<put-attribute name="body"
			value="/WEB-INF/views/admin/dashboard.jsp" />
	</definition>

	<definition name="admin_movie_list"
		extends="base.admin.definition">
		<put-attribute name="title" value="Movie list" />
		<put-attribute name="body"
			value="/WEB-INF/views/admin/movie/list_movie.jsp" />
	</definition>

	<definition name="admin_movie_edit"
		extends="base.admin.definition">
		<put-attribute name="title" value="Movie Edit" />
